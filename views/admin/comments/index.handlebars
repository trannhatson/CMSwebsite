<div class="row">
    <div class="container">
        <div class="col-md-10">
            <table  class="table table-bordered text-center text-white">
                <thead class="bg-dark">
                <tr>
                    <th>Id</th>
                    <th>Publisher</th>
                    <th>Date</th>
                    <th>File</th>
                </tr>
                </thead>

                <tbody class="text-dark">
                {{#each comments}}
                    <tr>
                        <td>{{id}}</td>
                        <td style="width: auto;">{{user.firstName}} {{user.lastName}}</td>
                        <td>{{date}}</td>
                        <td>{{file}}<form action="{{file}}">
                        <input type="submit" value="download">
                        </form></td>
                        

                    </tr>

                {{/each}}
                </tbody>


            </table>
        </div>
    </div>
</div>
